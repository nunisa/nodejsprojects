<% layout('./common_templates/layout') %>
<div class="row">
    <div class="col-xs-12">
        <p>Edit the city name that you've visited:</p>
        <fieldset>
            <legend>Add visited cities name here: </legend>
            <form class="form-inline" action="" method="post" role="form">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" value="<%=visited_place.name%>" placeholder="Enter full name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="city" value="<%=visited_place.city%>" placeholder="Enter city name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="state" value="<%=visited_place.state%>" placeholder="Enter state name">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </fieldset>
    </div>
</div>
