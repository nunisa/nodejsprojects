<% layout('./common_templates/layout') %>
<div class="row">
    <div class="col-xs-12">
        <p>Welcome to <%= title %></p>
        <p>You can add the cities name that you've visited:</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr class="success">
                        <th>#</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var counter = 1; visited_place.forEach(function(item){ %>
                        <tr class="warning">
                            <td><%=counter%></td>
                            <td><%=item.city%></td>
                            <td><%=item.state%></td>
                            <td>
                                <a href="/place/<%=item._id%>" target="_blank" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
                                <a href="/place/delete/<%=item._id%>" target="_blank" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    <% counter++ }); %>
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" href="/add-place" target="_blank">Add Place</a>
    </div>
</div>
